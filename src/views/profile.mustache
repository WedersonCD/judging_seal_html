<!DOCTYPE html>
<html lang="en">
    <head>
    {{> partials/head}}
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/seals.css">
    <script src='/js/echarts.min.js'></script>
    </head>    
    <body>
        <div class="content">
            <section class='background-color-primary text-color-neutral margin-bot-5'>
                <span class="text-align-center">
                    <h2>PROFILE</h2>
                </span>
            </section>
            <section class="flex-column">
            
            <div class="flex-row text-align-center justify-center align-center">
                <div class="flex-column">
                    <span>{{qtdSeals}}</span>
                    <span>seals</span>
                </div>
                <div class="margin-horizontal-10">
                    <img class="border-circle" src="/images/seal.png" height="50px" width="50px"/>
                </div>
                <div class="flex-column">
                    <span>{{qtdStars}}</span>
                    <span>stars</span>
                </div>
            </div>
            <div class="flex-row text-align-center justify-center align-center">
                WEDERSON DOMINGUES
            </div>
            </section>
            <section class="container">
                <div class="container-head">
                    <div class="container-head-option selected" _="install containerTabChanging(containerTabClass: .container-head-option,containerContentClassToHide: .container-content-item,containerContentClassToShow: .container-content-item-seals) end">seals</div>
                    <div class="container-head-option" _="install containerTabChanging(containerTabClass: .container-head-option,containerContentClassToHide: .container-content-item,containerContentClassToShow: .container-content-item-mood) end">mood</div>
                </div>
                <div class="container-content">

                    <div class="container-content-item container-content-item-seals sealContainer">
                        {{#seals}}
                        {{> partials/seal}}
                        <hr/>
                        {{/seals}}
                    </div>
                    <div class="container-content-item container-content-item-mood display-none" _="
                    init
                        set option to '{{starLineChartOption}}'
                        call JSON.parse(option)
                        set option to result
                        
                        call echarts.init(I)
                        set chart to result

                        call chart.setOption(option)
                    end

                    on mutation
                        call echarts.getInstanceByDom(I)
                        set chart to result
                        call chart.resize()
                    end
                    ">
                </div>
            </section>
        </div>
    {{> partials/menu}}
    </body>
</html>