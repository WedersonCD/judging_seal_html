<!DOCTYPE html>
<html lang="en">
    <head>
    {{> partials/head}}
    <link rel="stylesheet" href="/css/ocean.css">
    </head>    
    <body>
        <div class="content">

            <div>
                <span class="text-align-center">
                    <h2>WEALCOME TO THE OCEAN</h2>
                </span>
            </div>
            <div class="flex-column height-100">
                {{#sealsForTemplate}}
                <div class='dayContainer {{date}} flex-column'>
                    <div class="dayContainer-title text-align-center">
                        <h2><b>{{date}}</b><h2>
                    </div>
                    <div class='dayContainer-seals flex-column'>
                        {{#seals}}
                            <div class='dayContainer-seals-seal'>
                                <div class="flex-row justify-between">
                                    <div><b>{{seal_name}}</b></div>
                                    <div _="
                                        init 
                                          get getStars({{seal_rate}})
                                          put it into me
                                        end">
                                    </div>
                                </div>

                                <div class="flex-row">
                                {{#seal_hashtags}}
                                    <span class="hashtag margin-5">#{{.}}</span>
                                {{/seal_hashtags}}
                                </div>
                            </div>
                        {{/seals}}
                    </div>

                </div>
                {{/sealsForTemplate}}

            </div>
        </div>
    {{> partials/menu}}
    </body>
</html>